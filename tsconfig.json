{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "esModuleInterop": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "target": "es6",
        "baseUrl": "./src",
        "paths": {
            "@client": ["client/*"],
            "@server": ["server/*"],
        }
    },
    "exclude": [
        "build",
        "node_modules",
        "webpack",
    ]
}
